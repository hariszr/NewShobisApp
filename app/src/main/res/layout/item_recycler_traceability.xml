<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemTraceRecyclerViewCV"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemRecQrCodeSIV"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_empty_photos"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/itemRecPIDTV"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text="Product ID"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/itemRecQrCodeSIV"/>
        <TextView
            android:id="@+id/itemRecWeightTV"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="Weight"
            android:layout_toEndOf="@id/itemRecVarietyTV"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="0dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:text="gram"
            android:layout_toEndOf="@id/itemRecWeightTV"
            android:layout_marginTop="50dp"
            android:layout_marginStart="0dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/itemRecVarietyTV"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Variety"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toEndOf="@id/itemRecQrCodeSIV"
            android:layout_below="@id/itemRecPIDTV"
            android:layout_marginStart="20dp"
            android:maxLines="2"
            android:layout_marginBottom="12dp"/>

    </RelativeLayout>
        


</androidx.cardview.widget.CardView>